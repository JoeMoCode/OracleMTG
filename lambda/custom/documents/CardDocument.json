{
    "type": "APL",
    "version": "1.1",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.1.0"
        }
    ],
    "resources": [],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {
        "KVText": {
            "parameters":[
                {
                   "name": "key",
                   "type": "string"
                },
                {
                   "name": "value",
                   "type": "string"
                }
            ],
            "items": [
                {
                   "type": "Container",
                   "direction": "row",
                   "maxWidth":"55vw",
                   "items": [
                       {
                           "type":"Text",
                           "textAlign": "left",
                           "text":"<b>${key}:</b> ${value}"
                       }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "height": "100%",
                "width": "100%",
                "direction": "row",
                "items": [
                    {
                       "type": "AlexaImage",
                       "alignSelf": "center",
                       "imageSource": "${payload.card.url}",
                       "imageRoundedCorner": false,
                       "imageScale": "best-fit",
                       "imageHeight":"80vh",
                       "imageWidth":"40vw",
                       "imageAspectRatio": "standard_portrait",
                       "imageBlurredBackground": false
                   },
                   {
                        "type": "Container",
                        "direction": "column",
                        "paddingTop": "10vh",
                        "paddingBottom": "10vh",
                        "items": [
                            {
                               "type": "KVText",
                               "key": "Name",
                               "value": "${payload.card.name}"
                            },
                            {
                               "type": "KVText",
                               "key": "Cost",
                               "value": "${payload.card.manaCost}"
                            },
                            {
                               "type": "KVText",
                               "key": "Type",
                               "value": "${payload.card.type}"
                            },
                            {
                               "type": "KVText",
                               "key": "Card Text",
                               "value": "${payload.card.text}"
                            }
                        ]
                   }
                ]
            }
        ]
    }
}